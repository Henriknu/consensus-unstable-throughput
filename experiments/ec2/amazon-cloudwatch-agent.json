{
  "agent": {
    "metrics_collection_interval": 1,
    "run_as_user": "root"
  },
  "metrics": {
    "metrics_collected": {
      "cpu": {
        "resources": ["*"],
        "measurement": ["cpu_time_active"],
        "metrics_collection_interval": 1,
        "totalcpu": false
      },
      "mem": {
        "measurement": ["mem_used"],
        "metrics_collection_interval": 1
      },
      "net": {
        "measurement": ["net_bytes_sent"],
        "metrics_collection_interval": 1
      }
    }
  }
}
